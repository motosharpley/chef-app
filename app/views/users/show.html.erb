<div class="jumbotron">
   <%= render 'shared/page_title', title: "Chef #{@user.username}'s profile" %>
   <div class ="row">
       <div class ="col-md-4 col-md-offset-5">
           <%= gravatar_for @user, size:150 %>
       </div>
   </div>
   <% if @user.recipes.count != 0 %>
    <h4 align="center"><%= @user.username.capitalize %>'s recipes</h4>
    <div align="center">
     <%= will_paginate @user_recipes %>
    </div>
    <%= render 'recipes/recipe', obj:@user_recipes %>
    <div align="center">
     <%= will_paginate @user_recipes %>
    </div>
   <% else %>
    <h4 align="center"><%= @user.username.capitalize %> does not have any recipes yet</h4>
   <% end %>
</div>